<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/ProductName"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp"

        android:paddingTop="16dp"
        android:text="@string/product_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp" />


    <Button
        android:id="@+id/checkButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ProductName"
        android:layout_alignStart="@+id/ProductName"
        android:layout_below="@+id/ProductName"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text="@string/checked_button_text"
        android:textColor="@color/primaryColor"
        android:visibility="gone" />

    <Button
        android:id="@+id/deleteButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ProductName"
        android:layout_alignRight="@+id/ProductName"
        android:layout_alignTop="@+id/checkButton"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:text="@string/delete_product_button_text"
        android:textColor="@color/deleteColor"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/checkIcon"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/ProductName"
        android:layout_alignEnd="@+id/ProductName"
        android:layout_alignRight="@+id/ProductName"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_check_white_24dp"

        android:visibility="gone"
        android:tint="@color/checkColor" />

</RelativeLayout>