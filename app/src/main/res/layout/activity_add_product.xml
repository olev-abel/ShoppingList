<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.olev.shoppinglist.AddProduct">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_product_button_text"
        android:id="@+id/addProductButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="sendProductToMain" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productName"
        android:layout_above="@+id/addProductButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:width="240dp"
        android:hint="@string/product_name_placeholder_text" />
</RelativeLayout>
